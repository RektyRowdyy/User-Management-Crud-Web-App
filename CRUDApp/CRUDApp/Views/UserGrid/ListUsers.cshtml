@model IEnumerable<CRUDApp.Areas.Identity.Data.CRUDAppUser>

@{
    ViewData["Title"] = "ListUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



 <!-- Search Feature-->
<div class="row">
    <div class="col-md-4">
        <h1>ListUsers</h1>
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <form asp-action="ShowSearchResults" class="form-inline"> 
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse search">
                <label for="SearchPhrase" class="control-label"></label>
                <input name="SearchPhrase" class="form-control" />
                
            </div>
            <input type="submit" value="Search" class="btn btn-primary" />
        </form>
    </div>
</div>

<p>
    <a asp-area="Identity" asp-page="/Account/Register">Want to add yourself here?</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Date Of Birth
            </th>
            <th>
                Gender
            </th>
            <th>
                Email Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            @if(item.EmailConfirmed == true)
            {
                <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>

            </tr>   
            }
            
        }

    </tbody>
</table>

